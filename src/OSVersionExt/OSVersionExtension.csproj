<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <RootNamespace>OSVersionExt</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>OSVersionExt</PackageId>
    <Version>4.0.0</Version>
    <Title>OSVersionExt</Title>
    <Authors>Stefan Prugg</Authors>
    <Copyright>Copyright © 2023 Stefan Prugg under MIT license</Copyright>
    <Description>Detect Windows version in C# – Windows 2000 to Windows 11</Description>
    <PackageTags>windows version</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/pruggitorg/detect-windows-version</RepositoryUrl>
    <PackageProjectUrl>https://github.com/pruggitorg/detect-windows-version</PackageProjectUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReleaseNotes>Updated project to .NET Standard 2.0 and tested with .NET 8.0</PackageReleaseNotes>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

</Project>
